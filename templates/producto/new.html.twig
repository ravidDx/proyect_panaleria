<!-- Modal -->
<div id="product_new_modal" class="modal fade">
        <div class="modal-dialog modal-lg">
        	<!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                	<div id="text-header-modal"><i class="fa fa-edit"></i> Agregar nuevo producto</div>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>

                {{form_start(form_new, {'action':'' , 'method':'POST' , 'attr': {'id': 'form-new'}} )}}
	                <div class="modal-body">
                        <div class="row" id="msg-server"></div> 

                            <div class="form-group row ">
                                <div class="col-md-2 offset-md-1 ">
                                   Codigo
                                </div>
                                <div class="col-md-8">
                                    {{ form_widget(form_new.barcode,
                                        {'attr': {class: 'form-control form-control-sm'}  } )
                                    }}
                                </div>
                            </div>

                            <div class="form-group row ">
                                <div class="col-md-2 offset-md-1 ">
                                    {{ form_label(form_new.nombre) }}
                                </div>
                                <div class="col-md-8">
                                    {{ form_widget(form_new.nombre,
                                        {'attr': {class: 'form-control form-control-sm'}  } )
                                    }}
                                </div>
                            </div>



                            <div class="form-group row ">
                                <div class="col-md-2 offset-md-1 ">
                                    Cantidad
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group ">
                                      <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">paq.</span>
                                      </div>
                                        {{ form_widget(form_new.cantPack,
                                            {'attr': {class: 'form-control form-control-sm'}  } )
                                        }}
                                    </div>
                                    
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group ">
                                      <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">uds.</span>
                                      </div>
                                        {{ form_widget(form_new.cantUnit,
                                            {'attr': {class: 'form-control form-control-sm'}  } )
                                        }}
                                    </div>

                                    
                                </div>

                                <div class="col-md-2">
                                    <fieldset disabled>
                                        <div class="input-group">
                                          <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1">=</span>
                                          </div>
                                            {{ form_widget(form_new.cantTotal,
                                                {'attr': {class: 'form-control form-control-sm '}  } )
                                            }}
                                       
                                        </div>
                                    </fieldset>
   
                                </div>

                            </div>

                            <div class="form-group row ">
                                <div class="col-md-2 offset-md-1 ">
                                    Precio
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group ">
                                      <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">paq.</span>
                                      </div>
                                        {{ form_widget(form_new.precioPack,
                                            {'attr': {class: 'form-control form-control-sm'}  } )
                                        }}
                                    </div>
                                    
                                </div>

                                <div class="col-md-3">
                                    <div class="input-group ">
                                      <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">uds.</span>
                                      </div>
                                        {{ form_widget(form_new.precioUnit,
                                            {'attr': {class: 'form-control form-control-sm'}  } )
                                        }}
                                    </div>
                                    
                                </div>

                            </div>

                            <div class="form-group row ">
                                <div class="col-md-2 offset-md-1 ">
                                   Iva ?
                                </div>
                                <div class="col-md-3">
                                    {{ form_widget(form_new.isIva,
                                        {'attr': {class: 'form-control form-control-sm'}  } )
                                    }}
                                </div>
                            </div>


	                </div>

                      <div class="modal-footer">

                         {{ form_widget(form_new.guardar, {'attr':{'class':'new-ajax btn btn-primary btn-sm '}}) }}
                     </div>

	    
                 {{form_end(form_new)}}

            </div>
        </div>
</div>




